---
// Componente para mostrar an√°lisis de desempe√±o del estudiante
interface Props {
  idEstudiante?: number;
  idCurso?: number;
  title?: string;
}

const { title = 'Mi Desempe√±o en el Curso' } = Astro.props;
---

<div class="desempe√±o-contenedor">
  <div class="desempe√±o-card">
    <h2 class="desempe√±o-titulo">{title}</h2>
    
    <div id="desempe√±o-content" class="desempe√±o-content">
      <p class="text-gray-500">Cargando an√°lisis de desempe√±o...</p>
    </div>

    <div class="desempe√±o-acciones">
      <button 
        id="btn-analizar-desempe√±o" 
        class="btn btn-warning"
      >
        <i class="fas fa-microscope mr-2"></i>
        Analizar Mi Desempe√±o
      </button>
      <button 
        id="btn-recomendaciones" 

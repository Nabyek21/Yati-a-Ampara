---
// Componente: Chatbot IA Interactivo
// Permite conversar con el asistente sobre contenido del curso
---

<div id="ia-chatbot-container" class="ia-chatbot-hidden">
  <!-- Backdrop -->
  <div id="ia-chatbot-backdrop" class="ia-chatbot-backdrop"></div>
  
  <!-- Panel del Chat -->
  <div id="ia-chatbot-panel" class="ia-chatbot-panel">
    <!-- Header -->
    <div class="ia-chatbot-header">
      <div class="ia-chatbot-title">
        <i class="fas fa-robot"></i>
        <div>
          <h3>Asistente IA</h3>
          <p>Pregunta sobre el contenido del curso</p>
        </div>
      </div>
      <button id="ia-chatbot-close" class="ia-chatbot-close-btn" title="Cerrar">
        <i class="fas fa-times"></i>
      </button>
    </div>

    <!-- √Årea de Mensajes -->
    <div id="ia-chatbot-messages" class="ia-chatbot-messages">
      <div class="ia-chatbot-welcome">
        <div class="ia-welcome-icon">ü§ñ</div>
        <h4>¬°Hola! Soy tu asistente IA</h4>
        <p>Puedo ayudarte con:</p>
        <ul>
          <li>üìö Explicar conceptos del curso</li>
          <li>‚ùì Responder preguntas sobre temas</li>
          <li>üìã Generar gu√≠as de estudio</li>
          <li>üìä Analizar tu progreso</li>
          <li>üí° Sugerir recursos de aprendizaje</li>
        </ul>
      </div>
    </div>

    <!-- √Årea de Entrada -->
    <div class="ia-chatbot-input-area">
      <form id="ia-chatbot-form" class="ia-chatbot-input-form">
        <input
          type="text"
          id="ia-chatbot-input"
          class="ia-chatbot-input"
          placeholder="Escribe tu pregunta aqu√≠..."
          autocomplete="off"
        />
        <button type="submit" class="ia-chatbot-send-btn" title="Enviar">
          <i class="fas fa-paper-plane"></i>
        </button>
      </form>
      <div class="ia-chatbot-suggestions">
        <button class="ia-suggestion-tag" data-suggestion="¬øCu√°l es el resumen del m√≥dulo actual?">
          üìö Resumen
        </button>
        <button class="ia-suggestion-tag" data-suggestion="¬øCu√°les son los conceptos principales?">
          üéØ Conceptos
        </button>
        <button class="ia-suggestion-tag" data-suggestion="Necesito ayuda para entender este tema">
          üí° Ayuda
        </button>
      </div>
    </div>
  </div>
</div>

<style is:global>
.ia-chatbot-container {
  position: fixed;
  inset: 0;
  z-index: 10000;
  display: flex;
  align-items: flex-end;
  justify-content: flex-end;
  pointer-events: none;
}

.ia-chatbot-container:not(.ia-chatbot-hidden) {
  pointer-events: auto;
}

.ia-chatbot-hidden {
  display: none;
}

.ia-chatbot-backdrop {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.3);
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.ia-chatbot-panel {
  position: relative;
  width: 100%;
  max-width: 400px;
  height: 100%;
  max-height: 600px;
  background: white;
  border-radius: 12px 12px 0 0;
  display: flex;
  flex-direction: column;
  box-shadow: 0 -5px 40px rgba(0, 0, 0, 0.16);
  animation: slideUpChat 0.3s ease;
  margin: 16px;
  margin-bottom: 0;
}

@keyframes slideUpChat {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Header */
.ia-chatbot-header {
  padding: 16px;
  background: linear-gradient(135deg, #7c3aed, #6d28d9);
  color: white;
  border-radius: 12px 12px 0 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 12px;
}

.ia-chatbot-title {
  display: flex;
  gap: 12px;
  align-items: center;
  flex: 1;
}

.ia-chatbot-title i {
  font-size: 24px;
}

.ia-chatbot-title h3 {
  margin: 0;
  font-size: 16px;
  font-weight: 700;
}

.ia-chatbot-title p {
  margin: 0;
  font-size: 12px;
  opacity: 0.9;
}

.ia-chatbot-close-btn {
  background: rgba(255, 255, 255, 0.2);
  border: none;
  color: white;
  cursor: pointer;
  font-size: 18px;
  width: 36px;
  height: 36px;
  border-radius: 6px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.ia-chatbot-close-btn:hover {
  background: rgba(255, 255, 255, 0.3);
}

/* √Årea de Mensajes */
.ia-chatbot-messages {
  flex: 1;
  overflow-y: auto;
  padding: 16px;
  display: flex;
  flex-direction: column;
  gap: 12px;
  background: #f9fafb;
}

.ia-chatbot-welcome {
  text-align: center;
  padding: 20px;
  background: white;
  border-radius: 8px;
  border: 2px dashed #e5e7eb;
}

.ia-welcome-icon {
  font-size: 40px;
  margin-bottom: 12px;
}

.ia-chatbot-welcome h4 {
  margin: 0 0 8px 0;
  font-size: 16px;
  color: #1f2937;
}

.ia-chatbot-welcome p {
  margin: 0 0 12px 0;
  font-size: 12px;
  color: #6b7280;
}

.ia-chatbot-welcome ul {
  margin: 0;
  padding-left: 20px;
  text-align: left;
  font-size: 12px;
  color: #374151;
}

.ia-chatbot-welcome li {
  margin: 4px 0;
}

/* Mensajes */
.ia-message {
  display: flex;
  gap: 8px;
  animation: slideInMessage 0.3s ease;
}

@keyframes slideInMessage {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.ia-message.user {
  justify-content: flex-end;
}

.ia-message-content {
  max-width: 85%;
  padding: 12px 14px;
  border-radius: 8px;
  word-wrap: break-word;
  line-height: 1.4;
  font-size: 13px;
}

.ia-message-bot .ia-message-content {
  background: white;
  color: #1f2937;
  border: 1px solid #e5e7eb;
}

.ia-message-user .ia-message-content {
  background: linear-gradient(135deg, #7c3aed, #6d28d9);
  color: white;
  border-radius: 18px;
}

.ia-message-loading {
  display: flex;
  gap: 4px;
  padding: 12px 14px;
  background: white;
  border: 1px solid #e5e7eb;
  border-radius: 8px;
}

.ia-message-loading span {
  width: 6px;
  height: 6px;
  background: #7c3aed;
  border-radius: 50%;
  animation: pulse 1.4s infinite;
}

.ia-message-loading span:nth-child(2) {
  animation-delay: 0.2s;
}

.ia-message-loading span:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.4;
  }
  50% {
    opacity: 1;
  }
}

/* Input Area */
.ia-chatbot-input-area {
  padding: 12px;
  border-top: 1px solid #e5e7eb;
  background: white;
}

.ia-chatbot-input-form {
  display: flex;
  gap: 8px;
  margin-bottom: 8px;
}

.ia-chatbot-input {
  flex: 1;
  padding: 10px 12px;
  border: 1px solid #d1d5db;
  border-radius: 6px;
  font-size: 13px;
  font-family: inherit;
  transition: all 0.2s ease;
}

.ia-chatbot-input:focus {
  outline: none;
  border-color: #7c3aed;
  box-shadow: 0 0 0 3px rgba(124, 58, 237, 0.1);
}

.ia-chatbot-send-btn {
  padding: 10px 12px;
  background: linear-gradient(135deg, #7c3aed, #6d28d9);
  color: white;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  font-size: 14px;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ia-chatbot-send-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(124, 58, 237, 0.4);
}

.ia-chatbot-send-btn:active {
  transform: translateY(0);
}

.ia-chatbot-suggestions {
  display: flex;
  gap: 6px;
  overflow-x: auto;
  padding-bottom: 4px;
  scroll-behavior: smooth;
}

.ia-chatbot-suggestions::-webkit-scrollbar {
  height: 4px;
}

.ia-chatbot-suggestions::-webkit-scrollbar-track {
  background: #f3f4f6;
}

.ia-chatbot-suggestions::-webkit-scrollbar-thumb {
  background: #d1d5db;
  border-radius: 2px;
}

.ia-suggestion-tag {
  padding: 6px 12px;
  background: #f0f9ff;
  border: 1px solid #bfdbfe;
  border-radius: 16px;
  cursor: pointer;
  font-size: 12px;
  color: #0c4a6e;
  white-space: nowrap;
  transition: all 0.2s ease;
  font-weight: 500;
  flex-shrink: 0;
}

.ia-suggestion-tag:hover {
  background: #e0f2fe;
  border-color: #7dd3fc;
}

/* Responsive */
@media (max-width: 768px) {
  .ia-chatbot-panel {
    max-width: 100%;
    max-height: 70vh;
    border-radius: 12px 12px 0 0;
  }

  .ia-chatbot-messages {
    padding: 12px;
  }

  .ia-message-content {
    max-width: 90%;
  }
}

@media (max-width: 480px) {
  .ia-chatbot-panel {
    max-height: 80vh;
  }

  .ia-chatbot-title h3 {
    font-size: 14px;
  }

  .ia-chatbot-input {
    font-size: 12px;
  }
}

/* Scroll suave */
.ia-chatbot-messages::-webkit-scrollbar {
  width: 6px;
}

.ia-chatbot-messages::-webkit-scrollbar-track {
  background: transparent;
}

.ia-chatbot-messages::-webkit-scrollbar-thumb {
  background: #cbd5e1;
  border-radius: 3px;
}

.ia-chatbot-messages::-webkit-scrollbar-thumb:hover {
  background: #94a3b8;
}
</style>

<script>
import { chatConIA } from '../../services/iaService.js';

document.addEventListener('DOMContentLoaded', () => {
  const container = document.getElementById('ia-chatbot-container');
  const backdrop = document.getElementById('ia-chatbot-backdrop');
  const closeBtn = document.getElementById('ia-chatbot-close');
  const messagesDiv = document.getElementById('ia-chatbot-messages');
  const form = document.getElementById('ia-chatbot-form');
  const input = document.getElementById('ia-chatbot-input');
  const suggestionTags = document.querySelectorAll('.ia-suggestion-tag');

  let sessionId = `session_${Date.now()}`;

  function openChat() {
    container.classList.remove('ia-chatbot-hidden');
  }

  function closeChat() {
    container.classList.add('ia-chatbot-hidden');
  }

  closeBtn.addEventListener('click', closeChat);
  backdrop.addEventListener('click', closeChat);

  // Exponer funci√≥n global para abrir chat
  window.openIAChat = openChat;

  function getContextoModulo() {
    const pathParts = window.location.pathname.split('/').filter(p => p);
    const id_curso = pathParts[pathParts.length - 1];
    return { id_curso: parseInt(id_curso) };
  }

  function mostrarMensaje(texto, esUsuario = false) {
    const mensaje = document.createElement('div');
    mensaje.className = `ia-message ${esUsuario ? 'ia-message-user' : 'ia-message-bot'}`;
    
    const contenido = document.createElement('div');
    contenido.className = 'ia-message-content';
    contenido.textContent = texto;
    
    mensaje.appendChild(contenido);
    messagesDiv.appendChild(mensaje);
    
    // Scroll al final
    setTimeout(() => {
      messagesDiv.scrollTop = messagesDiv.scrollHeight;
    }, 100);
  }

  function mostrarCargando() {
    const mensaje = document.createElement('div');
    mensaje.className = 'ia-message ia-message-bot';
    mensaje.id = 'ia-loading-message';
    
    const contenido = document.createElement('div');
    contenido.className = 'ia-message-loading';
    contenido.innerHTML = '<span></span><span></span><span></span>';
    
    mensaje.appendChild(contenido);
    messagesDiv.appendChild(mensaje);
    
    messagesDiv.scrollTop = messagesDiv.scrollHeight;
  }

  function eliminarCargando() {
    const loadingMsg = document.getElementById('ia-loading-message');
    if (loadingMsg) loadingMsg.remove();
  }

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const texto = input.value.trim();
    if (!texto) return;
    
    // Limpiar input y ocultar sugerencias
    input.value = '';
    document.querySelector('.ia-chatbot-suggestions').style.display = 'none';
    
    // Mostrar mensaje del usuario
    mostrarMensaje(texto, true);
    
    // Mostrar indicador de carga
    mostrarCargando();
    
    try {
      const contexto = getContextoModulo();
      const respuesta = await chatConIA(sessionId, texto, contexto);
      
      eliminarCargando();
      
      if (respuesta.error) {
        mostrarMensaje('Lo siento, ocurri√≥ un error. Intenta nuevamente.');
      } else {
        mostrarMensaje(respuesta.respuesta);
        
        // Mostrar sugerencias si existen
        if (respuesta.sugerencias && respuesta.sugerencias.length > 0) {
          const sugDiv = document.createElement('div');
          sugDiv.style.fontSize = '12px';
          sugDiv.style.color = '#6b7280';
          sugDiv.style.marginTop = '8px';
          sugDiv.innerHTML = `üìö Temas relacionados: ${respuesta.sugerencias.join(', ')}`;
          
          const lastMsg = messagesDiv.lastChild;
          lastMsg.appendChild(sugDiv);
        }
      }
    } catch (error) {
      eliminarCargando();
      mostrarMensaje('Error: No pude procesar tu pregunta. Intenta otra cosa.');
    }
  });

  // Tags de sugerencia
  suggestionTags.forEach(tag => {
    tag.addEventListener('click', () => {
      const sugerencia = tag.dataset.suggestion;
      input.value = sugerencia;
      input.focus();
    });
  });
});
</script>

  .ia-floating-container {
    bottom: 15px;
    right: 15px;
  }

  .ia-float-btn {
    width: 45px;
    height: 45px;
    font-size: 18px;
  }

  .ia-float-menu {
    width: 260px;
    bottom: 65px;
  }

  .ia-menu-header h3 {
    font-size: 16px;
  }

  .ia-menu-btn {
    padding: 8px 10px;
    font-size: 12px;
  }

  .ia-close-btn {
    width: 28px;
    height: 28px;
    font-size: 14px;
  }
}

/* Scroll smooth */
.ia-float-menu::-webkit-scrollbar {
  width: 6px;
}

.ia-float-menu::-webkit-scrollbar-track {
  background: #f1f5f9;
}

.ia-float-menu::-webkit-scrollbar-thumb {
  background: #cbd5e1;
  border-radius: 3px;
}

.ia-float-menu::-webkit-scrollbar-thumb:hover {
  background: #94a3b8;
}
</style>

<script>
  import { 
    resumirCurso, 
    resumirActividades, 
    analizarDesempenoEstudiante 
  } from '../services/iaService.js';

  document.addEventListener('DOMContentLoaded', () => {
    const floatBtn = document.getElementById('ia-float-btn');
    const floatMenu = document.getElementById('ia-float-menu');
    const closeBtn = document.getElementById('ia-close-menu');
    const notification = document.getElementById('ia-notification');
    const notifText = document.getElementById('ia-notif-text');

    const resumenBtn = document.getElementById('ia-resumen-btn');
    const actividadesBtn = document.getElementById('ia-actividades-btn');
    const desempenoBtn = document.getElementById('ia-desempe√±o-btn');
    const preguntasBtn = document.getElementById('ia-preguntas-btn');

    // Toggle menu
    floatBtn.addEventListener('click', () => {
      floatMenu.classList.toggle('hidden');
    });

    closeBtn.addEventListener('click', () => {
      floatMenu.classList.add('hidden');
    });

    // Cerrar menu al hacer click fuera
    document.addEventListener('click', (e) => {
      if (
        !e.target.closest('#ia-floating-button-container')
      ) {
        floatMenu.classList.add('hidden');
      }
    });

    // Obtener ID del curso desde la URL
    function getIdCurso() {
      const pathParts = window.location.pathname
        .split('/')
        .filter(p => p);
      return pathParts[pathParts.length - 1];
    }

    // Obtener informaci√≥n del usuario
    function getUserInfo() {
      const user = localStorage.getItem('user');
      if (user) {
        try {
          return JSON.parse(user);
        } catch (e) {
          return null;
        }
      }
      return null;
    }

    // Mostrar notificaci√≥n
    function showNotification(text) {
      notifText.textContent = text;
      notification.classList.remove('hidden');
    }

    function hideNotification() {
      notification.classList.add('hidden');
    }

    // Bot√≥n: Resumen del Curso
    resumenBtn.addEventListener('click', async () => {
      const idCurso = getIdCurso();
      if (!idCurso) {
        alert('No se puede determinar el curso');
        return;
      }

      floatMenu.classList.add('hidden');
      showNotification('Generando resumen...');

      try {
        const resultado = await resumirCurso(parseInt(idCurso));
        hideNotification();

        // Crear modal con el resumen
        mostrarModal(
          'Resumen del Curso',
          resultado.resumen,
          'resumen'
        );
      } catch (error) {
        hideNotification();
        alert('Error: ' + error.message);
      }
    });

    // Bot√≥n: An√°lisis de Actividades
    actividadesBtn.addEventListener('click', async () => {
      const idCurso = getIdCurso();
      if (!idCurso) {
        alert('No se puede determinar el curso');
        return;
      }

      floatMenu.classList.add('hidden');
      showNotification('Analizando actividades...');

      try {
        const resultado = await resumirActividades(parseInt(idCurso));
        hideNotification();

        mostrarModal(
          'An√°lisis de Actividades',
          resultado.resumen,
          'actividades'
        );
      } catch (error) {
        hideNotification();
        alert('Error: ' + error.message);
      }
    });

    // Bot√≥n: Mi Desempe√±o
    desempenoBtn.addEventListener('click', async () => {
      const idCurso = getIdCurso();
      const user = getUserInfo();

      if (!idCurso || !user) {
        alert('No se puede obtener la informaci√≥n necesaria');
        return;
      }

      floatMenu.classList.add('hidden');
      showNotification('Analizando tu desempe√±o...');

      try {
        const resultado = await analizarDesempenoEstudiante(
          user.id_usuario || user.id,
          parseInt(idCurso)
        );
        hideNotification();

        mostrarModal(
          'An√°lisis de Mi Desempe√±o',
          resultado.analisis,
          'desempe√±o'
        );
      } catch (error) {
        hideNotification();
        alert('Error: ' + error.message);
      }
    });

    // Bot√≥n: Generar Preguntas
    preguntasBtn.addEventListener('click', async () => {
      const idCurso = getIdCurso();
      if (!idCurso) {
        alert('No se puede determinar el curso');
        return;
      }

      floatMenu.classList.add('hidden');
      showNotification('Generando preguntas...');

      try {
        const resultado = await fetch(
          'http://localhost:5678/api/ia/generar-preguntas',
          {
            method: 'POST',
            headers: {
              'Authorization': `Bearer ${localStorage.getItem('token')}`,
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({
              id_curso: parseInt(idCurso),
              cantidad: 5
            })
          }
        ).then(r => r.json());

        hideNotification();
        mostrarModal(
          'Preguntas de Estudio',
          resultado.preguntas,
          'preguntas'
        );
      } catch (error) {
        hideNotification();
        alert('Error: ' + error.message);
      }
    });

    // Funci√≥n para mostrar modal con resultados
    function mostrarModal(titulo, contenido, tipo) {
      const modal = document.createElement('div');
      modal.className = 'ia-modal';
      modal.id = 'ia-result-modal';

      let html = `
        <div class="ia-modal-backdrop"></div>
        <div class="ia-modal-content">
          <div class="ia-modal-header">
            <h2>${titulo}</h2>
            <button class="ia-modal-close" onclick="document.getElementById('ia-result-modal').remove()">
              <i class="fas fa-times"></i>
            </button>
          </div>
          <div class="ia-modal-body">
      `;

      // Renderizar contenido seg√∫n tipo
      if (tipo === 'resumen') {
        html += `
          <p><strong>Resumen:</strong> ${contenido.resumen}</p>
          ${contenido.temas_principales ? `
            <h4>Temas Principales</h4>
            <ul>${contenido.temas_principales.map(t => `<li>${t}</li>`).join('')}</ul>
          ` : ''}
          ${contenido.objetivos_aprendizaje ? `
            <h4>Objetivos</h4>
            <ul>${contenido.objetivos_aprendizaje.map(o => `<li>${o}</li>`).join('')}</ul>
          ` : ''}
          ${contenido.tiempo_estimado ? `<p><strong>‚è±Ô∏è Tiempo:</strong> ${contenido.tiempo_estimado}</p>` : ''}
          ${contenido.nivel_dificultad ? `<p><strong>üìä Dificultad:</strong> ${contenido.nivel_dificultad}</p>` : ''}
        `;
      } else if (tipo === 'actividades') {
        html += `
          <p><strong>${contenido.resumenGeneral}</strong></p>
          ${contenido.dificultadEstimada ? `<p><strong>Dificultad:</strong> ${contenido.dificultadEstimada}</p>` : ''}
          ${contenido.tiempoTotalEstimado ? `<p><strong>‚è±Ô∏è Tiempo:</strong> ${contenido.tiempoTotalEstimado}</p>` : ''}
          ${contenido.skillsDesarrollados ? `
            <h4>Skills</h4>
            <ul>${contenido.skillsDesarrollados.map(s => `<li>${s}</li>`).join('')}</ul>
          ` : ''}
        `;
      } else if (tipo === 'desempe√±o') {
        html += `
          <div style="text-align: center; margin: 20px 0;">
            <div style="font-size: 48px; font-weight: bold; color: #7c3aed;">
              ${contenido.promedioGeneral}%
            </div>
            <p style="color: #6b7280;">Calificaci√≥n General</p>
          </div>
          ${contenido.fortalezas ? `
            <h4>üí™ Fortalezas</h4>
            <ul>${contenido.fortalezas.map(f => `<li>${f}</li>`).join('')}</ul>
          ` : ''}
          ${contenido.areasDesarrollo ? `
            <h4>üéØ √Åreas de Mejora</h4>
            <ul>${contenido.areasDesarrollo.map(a => `<li>${a}</li>`).join('')}</ul>
          ` : ''}
          ${contenido.recomendaciones ? `
            <h4>üí° Recomendaciones</h4>
            <ul>${contenido.recomendaciones.map(r => `<li>${r}</li>`).join('')}</ul>
          ` : ''}
        `;
      } else if (tipo === 'preguntas') {
        html += contenido
          .map(
            (p, i) => `
          <div style="background: #f9fafb; padding: 12px; border-radius: 8px; margin-bottom: 12px;">
            <p><strong>${i + 1}. ${p.pregunta}</strong></p>
            <p style="font-size: 12px; color: #6b7280;">
              Tipo: ${p.tipo} | Dificultad: ${p.dificultad}
            </p>
            ${p.palabras_clave ? `
              <p style="font-size: 12px;">
                üè∑Ô∏è ${p.palabras_clave.join(', ')}
              </p>
            ` : ''}
          </div>
        `
          )
          .join('');
      }

      html += `
          </div>
          <div class="ia-modal-footer">
            <button class="ia-modal-btn" onclick="document.getElementById('ia-result-modal').remove()">
              Cerrar
            </button>
          </div>
        </div>
      `;

      modal.innerHTML = html;
      document.body.appendChild(modal);

      // Estilos del modal
      const style = document.createElement('style');
      style.textContent = `
        .ia-modal {
          position: fixed;
          inset: 0;
          z-index: 9999;
          display: flex;
          align-items: center;
          justify-content: center;
          animation: fadeIn 0.3s ease;
        }

        @keyframes fadeIn {
          from { opacity: 0; }
          to { opacity: 1; }
        }

        .ia-modal-backdrop {
          position: absolute;
          inset: 0;
          background: rgba(0, 0, 0, 0.5);
        }

        .ia-modal-content {
          position: relative;
          background: white;
          border-radius: 12px;
          width: 90%;
          max-width: 500px;
          max-height: 70vh;
          overflow-y: auto;
          box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
        }

        .ia-modal-header {
          padding: 20px;
          border-bottom: 1px solid #e5e7eb;
          display: flex;
          justify-content: space-between;
          align-items: center;
          background: linear-gradient(135deg, #f0f9ff, #f5f3ff);
        }

        .ia-modal-header h2 {
          margin: 0;
          font-size: 20px;
          color: #1f2937;
        }

        .ia-modal-close {
          background: transparent;
          border: none;
          cursor: pointer;
          font-size: 20px;
          color: #6b7280;
          width: 36px;
          height: 36px;
          display: flex;
          align-items: center;
          justify-content: center;
        }

        .ia-modal-close:hover {
          background: #f3f4f6;
          border-radius: 6px;
          color: #111827;
        }

        .ia-modal-body {
          padding: 20px;
          line-height: 1.6;
          color: #374151;
        }

        .ia-modal-body h4 {
          margin: 16px 0 8px 0;
          color: #1f2937;
          font-size: 14px;
          font-weight: 600;
          text-transform: uppercase;
          letter-spacing: 0.5px;
        }

        .ia-modal-body ul {
          margin: 8px 0;
          padding-left: 20px;
        }

        .ia-modal-body li {
          margin: 6px 0;
        }

        .ia-modal-body p {
          margin: 8px 0;
        }

        .ia-modal-footer {
          padding: 16px;
          border-top: 1px solid #e5e7eb;
          text-align: right;
          background: #fafafa;
        }

        .ia-modal-btn {
          padding: 10px 20px;
          background: linear-gradient(135deg, #7c3aed, #6d28d9);
          color: white;
          border: none;
          border-radius: 6px;
          cursor: pointer;
          font-weight: 500;
          transition: all 0.2s ease;
        }

        .ia-modal-btn:hover {
          transform: translateY(-2px);
          box-shadow: 0 4px 12px rgba(124, 58, 237, 0.4);
        }
      `;
      document.head.appendChild(style);
    }
  });
</script>

---
// Componente: Bot√≥n Flotante del Agente IA
// Aparece en la esquina inferior derecha con opciones de an√°lisis
---

<div id="ia-floating-button-container" class="ia-floating-container">
  <!-- Bot√≥n principal flotante -->
  <button id="ia-float-btn" class="ia-float-btn" title="Abrir Agente IA">
    <i class="fas fa-robot"></i>
    <span class="ia-badge">IA</span>
  </button>

  <!-- Panel flotante con opciones -->
  <div id="ia-float-menu" class="ia-float-menu hidden">
    <div class="ia-menu-header">
      <h3>Agente IA</h3>
      <button id="ia-close-menu" class="ia-close-btn">
        <i class="fas fa-times"></i>
      </button>
    </div>

    <div class="ia-menu-content">
      <p class="ia-menu-subtitle">¬øQu√© necesitas?</p>
      
      <button id="ia-resumen-btn" class="ia-menu-btn ia-btn-primary">
        <i class="fas fa-file-alt"></i>
        <span>Resumen del Curso</span>
      </button>

      <button id="ia-actividades-btn" class="ia-menu-btn ia-btn-secondary">
        <i class="fas fa-tasks"></i>
        <span>An√°lisis de Actividades</span>
      </button>

      <button id="ia-desempe√±o-btn" class="ia-menu-btn ia-btn-tertiary">
        <i class="fas fa-chart-line"></i>
        <span>Mi Desempe√±o</span>
      </button>

      <button id="ia-preguntas-btn" class="ia-menu-btn ia-btn-quaternary">
        <i class="fas fa-question-circle"></i>
        <span>Generar Preguntas</span>
      </button>
    </div>

    <div class="ia-menu-footer">
      <small>Powered by OpenAI</small>
    </div>
  </div>

  <!-- Notificaciones -->
  <div id="ia-notification" class="ia-notification hidden">
    <div class="ia-notif-content">
      <i class="fas fa-spinner fa-spin"></i>
      <span id="ia-notif-text">Procesando...</span>
    </div>
  </div>
</div>

<style is:global>
.ia-floating-container {
  position: fixed;
  bottom: 30px;
  right: 30px;
  z-index: 9998;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

/* Bot√≥n Flotante Principal */
.ia-float-btn {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: linear-gradient(135deg, #7c3aed, #6d28d9);
  color: white;
  border: none;
  cursor: pointer;
  font-size: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 12px rgba(124, 58, 237, 0.4);
  transition: all 0.3s ease;
  position: relative;
}

.ia-float-btn:hover {
  transform: scale(1.1);
  box-shadow: 0 6px 20px rgba(124, 58, 237, 0.6);
}

.ia-float-btn:active {
  transform: scale(0.95);
}

.ia-badge {
  position: absolute;
  top: -5px;
  right: -5px;
  background: #ef4444;
  color: white;
  font-size: 10px;
  font-weight: 700;
  padding: 2px 6px;
  border-radius: 10px;
  animation: pulse-badge 2s infinite;
}

@keyframes pulse-badge {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.6;
  }
}

/* Panel Flotante */
.ia-float-menu {
  position: absolute;
  bottom: 80px;
  right: 0;
  width: 320px;
  background: white;
  border-radius: 12px;
  box-shadow: 0 5px 40px rgba(0, 0, 0, 0.16);
  animation: slideUp 0.3s ease;
  max-height: 500px;
  overflow-y: auto;
}

.ia-float-menu.hidden {
  display: none;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.ia-menu-header {
  padding: 16px;
  border-bottom: 1px solid #e5e7eb;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(135deg, #f0f9ff, #f5f3ff);
}

.ia-menu-header h3 {
  margin: 0;
  font-size: 18px;
  font-weight: 700;
  color: #1f2937;
  display: flex;
  align-items: center;
  gap: 8px;
}

.ia-menu-header h3::before {
  content: 'ü§ñ';
  font-size: 20px;
}

.ia-close-btn {
  background: transparent;
  border: none;
  cursor: pointer;
  font-size: 16px;
  color: #6b7280;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 6px;
  transition: all 0.2s ease;
}

.ia-close-btn:hover {
  background: #f3f4f6;
  color: #111827;
}

.ia-menu-content {
  padding: 16px;
}

.ia-menu-subtitle {
  margin: 0 0 12px 0;
  font-size: 13px;
  font-weight: 600;
  color: #6b7280;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.ia-menu-btn {
  width: 100%;
  padding: 12px 16px;
  margin-bottom: 8px;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  font-size: 14px;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 12px;
  transition: all 0.2s ease;
  text-align: left;
}

.ia-menu-btn:last-child {
  margin-bottom: 0;
}

.ia-menu-btn i {
  font-size: 16px;
  min-width: 20px;
  text-align: center;
}

.ia-btn-primary {
  background: linear-gradient(135deg, #7c3aed, #6d28d9);
  color: white;
}

.ia-btn-primary:hover {
  transform: translateX(4px);
  box-shadow: 0 2px 8px rgba(124, 58, 237, 0.3);
}

.ia-btn-secondary {
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
}

.ia-btn-secondary:hover {
  transform: translateX(4px);
  box-shadow: 0 2px 8px rgba(16, 185, 129, 0.3);
}

.ia-btn-tertiary {
  background: linear-gradient(135deg, #f59e0b, #d97706);
  color: white;
}

.ia-btn-tertiary:hover {
  transform: translateX(4px);
  box-shadow: 0 2px 8px rgba(245, 158, 11, 0.3);
}

.ia-btn-quaternary {
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  color: white;
}

.ia-btn-quaternary:hover {
  transform: translateX(4px);
  box-shadow: 0 2px 8px rgba(59, 130, 246, 0.3);
}

.ia-menu-footer {
  padding: 12px 16px;
  border-top: 1px solid #e5e7eb;
  text-align: center;
  color: #9ca3af;
  font-size: 11px;
  background: #fafafa;
  border-radius: 0 0 12px 12px;
}

/* Notificaci√≥n */
.ia-notification {
  position: absolute;
  bottom: 80px;
  right: 0;
  background: white;
  padding: 16px;
  border-radius: 8px;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
  animation: slideUp 0.3s ease;
}

.ia-notification.hidden {
  display: none;
}

.ia-notif-content {
  display: flex;
  align-items: center;
  gap: 12px;
  color: #374151;
  font-size: 14px;
  font-weight: 500;
}

.ia-notif-content i {
  font-size: 16px;
  color: #7c3aed;
}

/* Responsive */
@media (max-width: 768px) {
  .ia-floating-container {
    bottom: 20px;
    right: 20px;
  }

  .ia-float-btn {
    width: 50px;
    height: 50px;
    font-size: 20px;
  }

  .ia-float-menu {
    width: 280px;
    bottom: 70px;
  }

  .ia-menu-btn {
    padding: 10px 12px;
    font-size: 13px;
  }

  .ia-menu-btn i {

  </div>
</div>

<style is:global>
.desempe√±o-contenedor {
  width: 100%;
  margin: 20px 0;
}

.desempe√±o-card {
  background: white;
  border-radius: 12px;
  border-left: 4px solid #f59e0b;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  padding: 24px;
  margin-bottom: 20px;
}

.desempe√±o-titulo {
  font-size: 1.5rem;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 16px;
  display: flex;
  align-items: center;
  gap: 10px;
}

.desempe√±o-titulo::before {
  content: 'üìà';
  font-size: 1.3rem;
}

.desempe√±o-content {
  background: #fffbeb;
  border-radius: 8px;
  padding: 20px;
  margin-bottom: 20px;
  line-height: 1.6;
  color: #374151;
}

.desempe√±o-content h3 {
  font-size: 1.1rem;
  font-weight: 600;
  color: #f59e0b;
  margin-top: 16px;
  margin-bottom: 8px;
  display: flex;
  align-items: center;
  gap: 8px;
}

.desempe√±o-content h3:first-child {
  margin-top: 0;
}

.score-display {
  display: flex;
  align-items: center;
  gap: 20px;
  margin: 20px 0;
}

.score-circle {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2.5rem;
  font-weight: 700;
  color: white;
}

.score-excellent {
  background: linear-gradient(135deg, #10b981, #059669);
}

.score-good {
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
}

.score-fair {
  background: linear-gradient(135deg, #f59e0b, #d97706);
}

.score-poor {
  background: linear-gradient(135deg, #ef4444, #dc2626);
}

.score-info {
  flex: 1;
}

.score-info p {
  margin: 4px 0;
  font-size: 0.95rem;
}

.fortalezas-list,
.mejora-list {
  margin: 12px 0 12px 20px;
}

.fortaleza-item,
.mejora-item {
  margin: 8px 0;
  padding: 8px 0;
  border-left: 3px solid #10b981;
  padding-left: 12px;
}

.mejora-item {
  border-left-color: #ef4444;
}

.recomendaciones-container {
  background: #f3f4f6;
  border-radius: 8px;
  padding: 20px;
  border-left: 4px solid #8b5cf6;
  margin-top: 20px;
}

.recomendacion-item {
  background: white;
  padding: 16px;
  border-radius: 6px;
  margin-bottom: 12px;
  display: flex;
  gap: 12px;
  align-items: flex-start;
}

.recomendacion-icono {
  font-size: 1.3rem;
  flex-shrink: 0;
}

.recomendacion-texto {
  flex: 1;
}

.recomendacion-titulo {
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 4px;
}

.recomendacion-desc {
  color: #6b7280;
  font-size: 0.95rem;
}

.desempe√±o-acciones {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
}

.btn-warning {
  background: linear-gradient(135deg, #f59e0b, #d97706);
  color: white;
}

.btn-warning:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(245, 158, 11, 0.4);
}

.btn-success {
  background: linear-gradient(135deg, #8b5cf6, #7c3aed);
  color: white;
}

.btn-success:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(139, 92, 246, 0.4);
}

@media (max-width: 768px) {
  .desempe√±o-card {
    padding: 16px;
  }

  .desempe√±o-acciones {
    flex-direction: column;
  }

  .btn {
    width: 100%;
    justify-content: center;
  }

  .score-display {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
}
</style>

<script>
  import { analizarDesempenoEstudiante, obtenerRecomendaciones } from '../../services/iaService.js';

  document.addEventListener('DOMContentLoaded', async () => {
    const btnAnalizar = document.getElementById('btn-analizar-desempe√±o');
    const btnRecomendaciones = document.getElementById('btn-recomendaciones');
    const desempenoContent = document.getElementById('desempe√±o-content');
    const recomendacionesContainer = document.getElementById('recomendaciones-container');

    if (!btnAnalizar) return;

    // Obtener ID de usuario y curso
    let idEstudiante = null;
    let idCurso = null;

    function obtenerIds() {
      const user = localStorage.getItem('user');
      if (user) {
        try {
          const userData = JSON.parse(user);
          idEstudiante = userData.id_usuario || userData.id;
        } catch (e) {
          console.error('Error parseando user:', e);
        }
      }

      const pathParts = window.location.pathname.split('/').filter(p => p);
      idCurso = pathParts[pathParts.length - 1];
    }

    btnAnalizar.addEventListener('click', async () => {
      try {
        obtenerIds();

        if (!idEstudiante || !idCurso) {
          alert('No se puede obtener la informaci√≥n del usuario o curso');
          return;
        }

        btnAnalizar.disabled = true;
        btnAnalizar.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Analizando...';

        const resultado = await analizarDesempenoEstudiante(idEstudiante, parseInt(idCurso));
        const analisis = resultado.analisis;
        const promedio = analisis.promedioGeneral;

        // Determinar clase del score
        let claseScore = 'score-poor';
        let nivelDesempe√±o = 'Necesita mejorar';

        if (promedio >= 90) {
          claseScore = 'score-excellent';
          nivelDesempe√±o = 'Excelente';
        } else if (promedio >= 75) {
          claseScore = 'score-good';
          nivelDesempe√±o = 'Bueno';
        } else if (promedio >= 60) {
          claseScore = 'score-fair';
          nivelDesempe√±o = 'Regular';
        }

        let html = '<div class="score-display">';
        html += `<div class="score-circle ${claseScore}">${promedio}%</div>`;
        html += `<div class="score-info">
          <p><strong>Desempe√±o General: ${nivelDesempe√±o}</strong></p>
          <p>Calificaci√≥n promedio: ${promedio}%</p>
          <p>Respuestas totales: ${resultado.respuestas_totales || 0}</p>
        </div></div>`;

        if (analisis.fortalezas && analisis.fortalezas.length > 0) {
          html += '<h3>üí™ Fortalezas</h3><ul class="fortalezas-list">';
          analisis.fortalezas.forEach(fort => {
            html += `<li class="fortaleza-item">‚úÖ ${fort}</li>`;
          });
          html += '</ul>';
        }

        if (analisis.areasDesarrollo && analisis.areasDesarrollo.length > 0) {
          html += '<h3>üéØ √Åreas para Mejorar</h3><ul class="mejora-list">';
          analisis.areasDesarrollo.forEach(area => {
            html += `<li class="mejora-item">‚ö†Ô∏è ${area}</li>`;
          });
          html += '</ul>';
        }

        desempenoContent.innerHTML = html;
        btnRecomendaciones.classList.remove('hidden');

        btnAnalizar.innerHTML = '<i class="fas fa-microscope mr-2"></i>Rean√°lizar';
      } catch (error) {
        console.error('Error:', error);
        desempenoContent.innerHTML = `<p class="text-red-500">Error al analizar desempe√±o: ${error.message}</p>`;
      } finally {
        btnAnalizar.disabled = false;
      }
    });

    btnRecomendaciones.addEventListener('click', async () => {
      try {
        if (!idEstudiante || !idCurso) {
          obtenerIds();
        }

        btnRecomendaciones.disabled = true;
        btnRecomendaciones.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Cargando...';

        const resultado = await obtenerRecomendaciones(idEstudiante, parseInt(idCurso));
        const recomendaciones = resultado.recomendaciones || [];

        let html = '<h3 style="margin-top: 0; color: #7c3aed;">Recomendaciones Personalizadas</h3>';

        const iconos = ['üéØ', 'üìö', 'üë•', 'üí¨', '‚è∞'];
        recomendaciones.forEach((rec, index) => {
          html += `
            <div class="recomendacion-item">
              <div class="recomendacion-icono">${iconos[index % iconos.length]}</div>
              <div class="recomendacion-texto">
                <div class="recomendacion-desc">${rec}</div>
              </div>
            </div>
          `;
        });

        recomendacionesContainer.innerHTML = html;
        recomendacionesContainer.classList.remove('hidden');
      } catch (error) {
        console.error('Error:', error);
        recomendacionesContainer.innerHTML = `<p class="text-red-500">Error al cargar recomendaciones: ${error.message}</p>`;
        recomendacionesContainer.classList.remove('hidden');
      } finally {
        btnRecomendaciones.disabled = false;
        btnRecomendaciones.innerHTML = '<i class="fas fa-lightbulb mr-2"></i>Ver Recomendaciones';
      }
    });

    // Cargar autom√°ticamente al abrir la p√°gina si es un estudiante
    window.addEventListener('load', () => {
      obtenerIds();
      // Descomentar para auto-cargar:
      // if (idEstudiante && idCurso) {
      //   btnAnalizar.click();
      // }
    });
  });
</script>

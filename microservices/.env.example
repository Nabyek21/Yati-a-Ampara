# Variables de Entorno - Microservicios SoaYatinya
# Copia este archivo a .env y ajusta según tus necesidades

# ====================
# Configuración General
# ====================
NODE_ENV=development
LOG_LEVEL=info

# ====================
# Puertos de Servicios
# ====================
API_GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
COURSE_SERVICE_PORT=3002
CONTENT_SERVICE_PORT=3003
IA_SERVICE_PORT=3004
EVALUATION_SERVICE_PORT=3005
STUDENT_SERVICE_PORT=3006
NOTIFICATION_SERVICE_PORT=3007

# ====================
# URLs de Servicios (para comunicación inter-servicio)
# ====================
AUTH_SERVICE_URL=http://localhost:3001
COURSE_SERVICE_URL=http://localhost:3002
CONTENT_SERVICE_URL=http://localhost:3003
IA_SERVICE_URL=http://localhost:3004
EVALUATION_SERVICE_URL=http://localhost:3005
STUDENT_SERVICE_URL=http://localhost:3006
NOTIFICATION_SERVICE_URL=http://localhost:3007

# En Docker/Compose:
# AUTH_SERVICE_URL=http://auth-service:3001
# COURSE_SERVICE_URL=http://course-service:3002
# etc...

# ====================
# Base de Datos
# ====================
DB_HOST=localhost
DB_PORT=3306
DB_USER=yatinna_user
DB_PASSWORD=yatinna_pass
DB_NAME=yatinna
DB_POOL_SIZE=10

# ====================
# Autenticación y Seguridad
# ====================
JWT_SECRET=tu_secret_jwt_muy_seguro_aqui
JWT_EXPIRATION=24h
BCRYPT_ROUNDS=10

# ====================
# OpenAI (para IA Service)
# ====================
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000

# ====================
# Email (para Notification Service)
# ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_contraseña_app
SMTP_FROM=noreply@yatinya.com

# ====================
# Redis (opcional, para cache/sesiones)
# ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ====================
# RabbitMQ (opcional, para message queue)
# ====================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# ====================
# Almacenamiento de Archivos
# ====================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800  # 50MB en bytes
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,gif,zip,rar

# ====================
# CORS
# ====================
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:4000

# ====================
# Rate Limiting
# ====================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100

# ====================
# Logging
# ====================
LOG_FORMAT=json
LOG_DIR=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14

# ====================
# Feature Flags
# ====================
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_PROFILING=false

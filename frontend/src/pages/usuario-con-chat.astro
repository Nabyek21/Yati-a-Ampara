---
// Ejemplo 1: Dashboard del usuario con Chat N8N
import UsuarioLayout from '../layouts/UsuarioLayout.astro';
import N8NChatWidget from '../components/N8NChatWidget.astro';
---

<UsuarioLayout>
  <div class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100">
    {/* Tu contenido del dashboard aquí */}
    <main class="container mx-auto px-4 py-8">
      <h1 class="text-4xl font-bold text-gray-800 mb-8">Mis Cursos</h1>
      {/* Aquí irá tu contenido */}
    </main>

    {/* Chat N8N Widget - Se renderiza en la esquina inferior derecha */}
    <N8NChatWidget 
      webhookUrl="http://localhost:5678/webhook/713a62c3-cfa4-4df7-af75-05c877ccf605/chat"
      title="Asistente Yatiña"
      subtitle="¿Qué necesitas?"
    />
  </div>
</UsuarioLayout>
